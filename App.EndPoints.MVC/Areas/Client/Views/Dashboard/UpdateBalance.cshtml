@{
	Layout = "_Layout";
}

<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow-lg border-0">
				<div class="card-header text-center text-white gradient-header py-3">
					<h2 class="mb-0">افزایش موجودی</h2>
				</div>
				<div class="card-body">
					@if (TempData["ErrorMessage"] != null)
					{
						<div class="alert alert-danger text-center">
							@TempData["ErrorMessage"]
						</div>
					}
					@if (TempData["SuccessMessage"] != null)
					{
						<div class="alert alert-success text-center">
							@TempData["SuccessMessage"]
						</div>
					}
					<form method="post" asp-action="UpdateBalance">
						<div class="form-group mb-3">
							<label for="balance" class="form-label">مقدار افزایش موجودی</label>
							<input type="number" class="form-control" name="balance" id="balance" value="100" min="100.01" step="0.01" required />
						</div>
						<button type="submit" class="btn btn-primary w-100">افزایش موجودی</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


<style>
	

	/* Card styling */
	.card {
		border-radius: 15px;
	}

	.card-header.gradient-header {
		background: linear-gradient(135deg, #007bff, #00aaff);
		border-top-left-radius: 15px;
		border-top-right-radius: 15px;
	}

	.card-body {
		padding: 2rem;
	}

	/* Form styling */
	.form-label {
		font-weight: bold;
		margin-bottom: 0.5rem;
	}

	.form-control {
		padding: 10px;
		font-size: 1rem;
		border-radius: 0.375rem;
	}

	/* Button styling */
	.btn-primary {
		background-color: #007bff;
		border-color: #007bff;
		padding: 12px;
		font-size: 1rem;
		border-radius: 5px;
		transition: background-color 0.3s ease, transform 0.3s ease;
	}

		.btn-primary:hover {
			background-color: #0056b3;
			transform: translateY(-2px);
		}

	/* Alert styling */
	.alert {
		margin-bottom: 1rem;
		font-size: 0.95rem;
	}
</style>

