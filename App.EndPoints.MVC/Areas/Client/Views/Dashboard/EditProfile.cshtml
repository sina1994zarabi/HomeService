@model App.Domain.Core.DTOs.ClientDto.UpdateClientprofileDto

@{
	ViewData["Title"] = "ویرایش پروفایل";
	Layout = "_Layout";
	// Define a default image URL if no profile picture is provided.
	var profilePicUrl = !string.IsNullOrEmpty(Model.ImagePath)
						? Model.ImagePath
						: "/images/default-avatar.png"; // Ensure this default image exists in your wwwroot/images folder.
}

<div class="container my-5 d-flex justify-content-center">
	<div class="card profile-card shadow-sm" style="max-width: 600px; width: 100%;">
		<!-- Profile Picture Section -->
		<div class="card-header bg-light text-center position-relative">
			<div class="profile-pic-container">
				<img src="@profilePicUrl" alt="Profile Picture" class="profile-pic img-fluid rounded-circle" />
			</div>
			<h3 class="mt-4">ویرایش پروفایل</h3>
		</div>
		<div class="card-body">
			<form asp-action="EditProfile" method="post" enctype="multipart/form-data">
				<input type="hidden" asp-for="AppUserId" />
				<input type="hidden" asp-for="Id" />

				<div class="form-group mb-3">
					<label asp-for="FullName" class="form-label">نام و نام خانوادگی</label>
					<input asp-for="FullName" class="form-control" placeholder="نام و نام خانوادگی" />
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>

				<div class="form-group mb-3">
					<label asp-for="Email" class="form-label">ایمیل</label>
					<input asp-for="Email" class="form-control" placeholder="ایمیل" />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>

				<div class="form-group mb-3">
					<label asp-for="Username" class="form-label">نام کاربری</label>
					<input asp-for="Username" class="form-control" placeholder="نام کاربری" />
					<span asp-validation-for="Username" class="text-danger"></span>
				</div>

				<div class="form-group mb-3">
					<label asp-for="PhoneNumber" class="form-label">شماره تماس</label>
					<input asp-for="PhoneNumber" class="form-control" placeholder="شماره تماس" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>

				<div class="form-group mb-4">
					<label class="form-label">عکس پروفایل</label>
					<input asp-for="Image" type="file" class="form-control" />
					<span asp-validation-for="Image" class="text-danger"></span>
				</div>

				<button type="submit" class="btn btn-primary w-100">ذخیره تغییرات</button>
			</form>
		</div>
	</div>
</div>


<style>

	/* Card styling for profile editing */
	.profile-card {
		border: none;
		border-radius: 15px;
	}

	.card-header {
		border-radius: 15px 15px 0 0;
		padding-top: 50px; /* Provide extra space for the profile image overlap */
		position: relative;
	}

	/* Profile Picture Styling */
	.profile-pic-container {
		position: absolute;
		left: 50%;
		top: -40px;
		transform: translateX(-50%);
		width: 80px;
		height: 80px;
		border: 4px solid #fff;
		border-radius: 50%;
		overflow: hidden;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
	}

	.profile-pic {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	/* Form controls */
	.form-control {
		font-size: 1rem;
		padding: 10px;
		border-radius: 0.375rem;
	}

	.form-label {
		font-weight: bold;
		margin-bottom: 0.5rem;
	}

	/* Button Styling */
	.btn-primary {
		background-color: #007bff;
		border-color: #007bff;
		transition: background-color 0.3s ease, transform 0.3s ease;
		padding: 12px;
		font-size: 1rem;
	}

		.btn-primary:hover {
			background-color: #0056b3;
			transform: translateY(-2px);
		}
</style>

