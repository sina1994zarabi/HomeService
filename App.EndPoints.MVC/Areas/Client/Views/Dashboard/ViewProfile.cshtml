@using App.Domain.Core.Enums;
@using FrameWork;
@model App.Domain.Core.Entities.User.AppUser;


@{
	ViewData["Title"] = "پروفایل من";
	Layout = "_Layout";
}

<div class="container my-5 d-flex justify-content-center">
	<div class="card profile-card shadow-sm" style="max-width: 600px; width: 100%;">
		<div class="card-header text-center bg-light">
			@if (string.IsNullOrEmpty(Model.ProfilePicture))
			{
				<img src = "~/ClientPanel/images/default-profile.png" alt="Profile Picture" class="rounded-circle" style="width:150px; height:150px; object-fit: cover;" />
			}
			else
			{
				<img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle" style="width:150px; height:150px; object-fit: cover;" />
			}
		</div>
		<div class="card-body text-center">
			<h3 class="mb-3">@Model.FullName</h3>
			<p class="mb-1">ایمیل: @Model.Email</p>
			<p class="mb-3">شماره تماس: @Model.PhoneNumber</p>
			<a class="btn btn-primary" asp-action="EditProfile" asp-route-id="@Model.Id">ویرایش پروفایل</a>
		</div>
	</div>
</div>
