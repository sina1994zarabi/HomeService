@using App.Domain.Core.Enums;
@using FrameWork;
@model App.Domain.Core.Entities.User.AppUser;

@{
    ViewData["Title"] = "پروفایل من";
    Layout = "_Layout";
}

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="container my-5 d-flex justify-content-center">
    <div class="card profile-card shadow-lg" style="max-width: 600px; width: 100%; border-radius: 15px;">
        <div class="card-header text-center bg-primary text-white" style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
            @if (string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img src="~/ClientPanel/images/default-profile.png" alt="Profile Picture" class="rounded-circle border border-white" style="width:150px; height:150px; object-fit: cover;" />
            }
            else
            {
                <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle border border-white" style="width:150px; height:150px; object-fit: cover;" />
            }
        </div>
        <div class="card-body text-center">
            <h3 class="mb-3">@Model.FullName</h3>
            <p class="mb-1"><i class="fas fa-envelope me-2"></i>ایمیل: @Model.Email</p>
            <p class="mb-1"><i class="fas fa-phone me-2"></i>شماره تماس: @Model.PhoneNumber</p>
            <p class="mb-3"><i class="fas fa-wallet me-2"></i>موجودی حساب: @Model.AccountBalance.ToString("N0") تومان</p>
            <a class="btn btn-primary btn-lg" asp-action="EditProfile" asp-route-id="@Model.Id">ویرایش پروفایل</a>
        </div>
    </div>
</div>