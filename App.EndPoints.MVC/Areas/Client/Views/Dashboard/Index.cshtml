@using App.Domain.Core.Enums;
@{
    ViewData["Title"] = "Client Dashboard";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-8">
        <h2>خوش آمدید @ViewBag.CurrentUser.UserName</h2>
        <p> </p>
        <!-- Add additional content like recent bookings or recommended services here -->
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                @if (!string.IsNullOrEmpty(@ViewBag.CurrentUser.ProfilePicture))
                {
                    <img src="@ViewBag.CurrentUser.ProfilePicture" alt="Avatar" class="rounded-circle" style="width: 100px;" />
                }
                else if (@ViewBag.CurrentUser.Gender == Gender.male)
                {
                    <img src="~/Uploads/maleProfilePicture.jpg" alt="Profile Picture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                }
                else
                {
                    <img src="~/Uploads/femaleProfilePicture.png" alt="Profile Picture" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" />
                }
                <h5 class="mt-3"> <strong>نام کاربری: </strong>@ViewBag.CurrentUser.UserName</h5>
                <p class="text-muted"><strong>ایمیل: </strong>@ViewBag.CurrentUser.Email</p>
                <p class="text-muted"><strong>شماره تلفن: </strong>@ViewBag.CurrentUser.PhoneNumber</p>
            </div>
        </div>
    </div>
</div>