@{
    ViewData["Title"] = "Client Dashboard";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-8">
        <h2>Welcome, @ViewData["Username"]</h2>
        <p>Here you can manage your home service bookings, browse available services, and more.</p>
        <!-- Add additional content like recent bookings or recommended services here -->
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <img src="~/img/avatar.png" alt="Avatar" class="rounded-circle" style="width: 100px;" />
                <h5 class="mt-3">@ViewData["Username"]</h5>
                <p class="text-muted">email</p>
                <p class="text-muted">phone number</p>
            </div>
        </div>
    </div>
</div>