<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مشتری</title>
    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/ClientPanel/css/Styles.css">
</head>
<body>
    <div class="container-fluid">
        <!-- Header -->
        <header class="header">
            <div class="container">
                <div class="header-content">
                    <div class="logo">
                        <img src="~/ClientPanel/image/logo/logo-placeholder-png.png" alt = "Logo" class = "logo-img">
                    </div>
                    <div class="profile">
                        <a href="#" class="profile-link"><i class="fas fa-user"></i> پروفایل</a>
                    </div>
                    <div class="phone">
                        <i class="fas fa-phone"></i> 
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="main-content row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="sidebar">
                    <a href="#" class="sidebar-btn"><i class="fas fa-user"></i> پروفایل</a>
                    <a href="#" class="sidebar-btn"><i class="fas fa-money-bill-wave"></i> پرداخت‌ها</a>
                    <a href="#" class="sidebar-btn"><i class="fas fa-toggle-on"></i> فعال</a>
                    <a href="#" class="sidebar-btn"><i class="fas fa-cog"></i> تنظیمات</a>
                </div>
            </div>
            <!-- User Information -->
            <div class="col-md-9">
                    @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
            <div class="container">
                <p class="footer-text">© ۲۰۲۵  تمامی حقوق محفوظ است</p>
            </div>
        </footer>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>