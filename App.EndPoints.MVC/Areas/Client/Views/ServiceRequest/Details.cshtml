@using App.Domain.Core.Enums;
@using FrameWork;
@using App.Domain.Core.Entities.Services;
@model ServiceRequest

@{
    Layout = "_Layout";
    ViewData["Title"] = "جزئیات درخواست";
}

<style>
    /* Container must support RTL for Persian content */
    [dir="rtl"] {
        direction: rtl;
        text-align: right;
    }

    /* Main request card styling */
    .request-details {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

        .request-details .header {
            background-color: #f8f9fa;
            padding: 15px;
            border-bottom: 1px solid #ddd;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .request-details .body {
            padding: 20px;
        }

    /* Offer card styling */
    .offer-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
        padding: 15px;
        margin-bottom: 15px;
    }

        .offer-card .offer-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .offer-card .offer-details {
            margin-top: 10px;
        }

    /* Button overrides */
    .btn-lg {
        padding: 10px 25px;
        font-size: 1.1rem;
    }
</style>

<div class="container my-4" dir="rtl">
    <h2 class="text-center mb-4">جزئیات درخواست خدمات</h2>

    <!-- Request Details Card -->
    <div class="request-details">
        <div class="header">
            <h4 class="mb-0">@Model.Title</h4>
        </div>
        <div class="body">
            <p><strong>توضیحات: </strong>@Model.Description</p>
            <p><strong>تاریخ رزرو: </strong>@Model.BookingDate.ToString("yyyy/MM/dd")</p>
            <p>
                <strong>وضعیت: </strong>
                <span class="badge bg-primary">@Model.Status.ToFarsiStatus()</span>
            </p>
        </div>
    </div>

    <!-- Offers Section -->
    <h4 class="mb-3">پیشنهادهای دریافتی</h4>
    @if (Model.ServiceOfferings != null && Model.ServiceOfferings.Any())
    {
        <form asp-action="AcceptOffer" method="post">
            <input type="hidden" name="requestId" value="@Model.Id" />
            @foreach (var offer in Model.ServiceOfferings)
            {
                <div class="offer-card">
                    <div class="offer-header">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="offerId" id="offer_@offer.Id" value="@offer.Id" required />
                            <label class="form-check-label" for="offer_@offer.Id">
                                <strong>پیشنهاد از: @offer.Expert.FullName</strong>
                            </label>
                        </div>
                        <span class="badge bg-secondary">کارشناس</span>
                    </div>
                    <div class="offer-details">
                        <p class="mb-1"><strong>توضیحات: </strong>@offer.Description</p>
                        <p class="mb-1"><strong>تاریخ پیشنهاد: </strong>@offer.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>
                        <span class="badge bg-info">@offer.Status.ToFarsiStatus()</span>
                    </div>
                </div>
            }
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">قبول پیشنهاد انتخاب شده</button>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning text-center">برای این درخواست هنوز هیچ پیشنهادی ثبت نشده است.</div>
    }

    @if (Model.Status == StatusEnum.InProgress)
    {
        <div class="text-center mt-4">
            <a asp-action = "MarkAsDone" 
               asp-route-RequestId = "@Model.Id"
               class="btn btn-primary btn-lg">
                علامت گذاری به عنوان تکمیل شده
            </a>
        </div>
    }
</div>
