@using App.Domain.Core.Enums;
@using FrameWork;
@using App.Domain.Core.Entities.Services;
@model ServiceRequest

@{
    Layout = "_Layout";
    ViewData["Title"] = "جزئیات درخواست";
}

<div class="container my-4">
    <h2 class="text-center mb-4">جزئیات درخواست خدمات</h2>
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5>@Model.Title</h5>
        </div>
        <div class="card-body">
            <p><strong>توضیحات:</strong> @Model.Description</p>
            <p><strong>تاریخ رزرو:</strong> @Model.BookingDate.ToString("yyyy/MM/dd")</p>
            <p>
                <strong>وضعیت:</strong>
                <span class="badge bg-primary">@Model.Status.ToFarsiStatus()</span>
            </p>
        </div>
    </div>

    <h4 class="mb-3">پیشنهادهای دریافتی</h4>
    @if (Model.ServiceOfferings != null && Model.ServiceOfferings.Any())
    {
        <form asp-action = "AcceptOffer" method="post">
            <input type="hidden" name="requestId" value="@Model.Id" />
            <div class="list-group">
                @foreach (var offer in Model.ServiceOfferings)
                {
                    <div class="list-group-item mb-2">
                        <div class="form-check">
                            <input type="radio" class="form-check-input" name="offerId" id="offer_@offer.Id" value="@offer.Id" required />
                            <label class="form-check-label" for="offer_@offer.Id">
                                <strong>پیشنهاد از: @offer.Expert.FullName</strong>
                            </label>
                            <!-- Additional role label next to the radio button -->
                            <span class="offer-role-label badge bg-secondary ms-2">کارشناس</span>
                        </div>
                        <div class="mt-2">
                            <p class="mb-1">توضیحات: @offer.Description</p>
                            <p class="mb-1">تاریخ پیشنهاد: @offer.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>
                            <span class="badge bg-info">@offer.Status.ToFarsiStatus()</span>
                        </div>
                    </div>
                }

            </div>
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-success btn-lg">قبول پیشنهاد انتخاب شده</button>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning text-center">برای این درخواست هنوز هیچ پیشنهادی ثبت نشده است.</div>
    }

    @if (Model.Status == StatusEnum.InProgress)
    {
        <div class="text-center mt-4">
            <form asp-action="MarkCompleted" method="post" class="d-inline">
                <input type = "hidden" name="requestId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary btn-lg">علامت گذاری به عنوان تکمیل شده</button>
            </form>
        </div>
    }
</div>
