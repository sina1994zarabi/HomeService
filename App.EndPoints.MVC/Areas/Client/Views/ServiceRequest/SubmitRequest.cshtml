@model App.Domain.Core.DTOs.ServiceRequestDto.CreateServiceRequestDto

@{
    ViewData["Title"] = "Submit Service Request";
    Layout = "_Layout";
}

<h2 class="text-center mb-4">ارسال درخواست خدمات</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header">
        <h5 class="card-title">مشخصات درخواست</h5>
    </div>
    <div class="card-body">
        <form asp-action = "SubmitRequest" method="post">
            <input asp-for = "ServiceId" type="hidden" value= "@ViewBag.Service.Id">
            <div class="form-group mb-3">
                <label class="form-label">خدمت انتخابی</label>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">@ViewBag.Service.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <!-- Service Image Placeholder -->
                            <div class="service-image rounded-circle bg-secondary d-flex justify-content-center align-items-center" style="width: 100px; height: 100px; overflow: hidden; margin-right: 20px;">
                                @if (!string.IsNullOrEmpty(ViewBag.Service.Image))
                                {
                                    <img src="@ViewBag.Service.Image" alt="Service Image" class="img-fluid" />
                                }
                                else
                                {
                                    <i class="fas fa-cogs text-white" style="font-size: 36px;"></i>
                                }
                            </div>
                            <!-- Service Details -->
                            <div>
                                <p><strong>توضیحات: </strong> @ViewBag.Service.Description</p>
                                <p><strong>قیمت :</strong> @ViewBag.Service.Price.ToString("N0") ریال</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for = "Title" class="form-label">عنوان درخواست</label>
                <input asp-for = "Title" class="form-control" placeholder="عنوان درخواست را وارد کنید" required />
                <span asp-validation-for = "Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for = "Description" class="form-label">توضیحات</label>
                <textarea asp-for = "Description" class="form-control" rows="3" placeholder="توضیحات بیشتر" required></textarea>
                <span asp-validation-for = "Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for = "BookingDate" class="form-label">تاریخ رزرو</label>
                <input asp-for="BookingDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">ارسال درخواست</button>
        </form>
    </div>
</div>

<a asp-area = "" asp-controller = "Home" asp-action = "Index" class="btn btn-secondary">بازگشت به صفحه اصلی</a>


