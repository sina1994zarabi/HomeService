@using App.Domain.Core.Entities.Services;
@model ServiceOffering

@{
	ViewData["Title"] = "ارسال پیشنهاد";
	Layout = "_Layout";
}

<div class="container my-5">
	<h2 class="text-center mb-4">ارسال پیشنهاد برای درخواست خدمت</h2>

	@if (TempData["Message"] != null)
	{
		<div class="alert alert-success text-center">
			@TempData["Message"]
		</div>
	}

	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card shadow-sm">
				<div class="card-body p-4">
					<form asp-action="SubmitOffer" method="post">
						<input type="hidden" name="serviceRequestId" value="@ViewBag.ServiceRequest.Id" />

						<div class="form-group mb-3">
							<label for="Description" class="form-label fw-bold">توضیحات</label>
							<textarea class="form-control" name="description" id="Description" rows="3" placeholder="توضیحات خود را وارد کنید" required></textarea>
						</div>

						<button type="submit" class="btn btn-success w-100 py-2">ارسال پیشنهاد</button>
					</form>
				</div>
			</div>
		</div>
	</div>

	<div class="text-center mt-3">
		<a href="@Url.Action("Details", "ServiceRequest", new { id = ViewBag.ServiceRequest.Id })" class="btn btn-secondary">
			<i class="fas fa-arrow-left"></i> بازگشت به درخواست
		</a>
	</div>
</div>


<style>
	.container {
		direction: rtl;
	}
	
	.card {
		border-radius: 10px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
	}

	.card-body {
		padding: 2rem;
	}
	
	.form-control {
		border-radius: 0.375rem;
		font-size: 1rem;
		padding: 10px;
	}

	.form-label {
		font-weight: bold;
	}
	
	.btn {
		font-size: 1.1rem;
		transition: background-color 0.3s, transform 0.3s;
	}

	.btn-success {
		background-color: #28a745;
		border-color: #28a745;
	}

	.btn-success:hover {
		background-color: #218838;
		transform: translateY(-2px);
	}
</style>

