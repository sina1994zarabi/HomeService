@model List<App.Domain.Core.DTOs.ServiceDto.GetServiceDto>

@{
    ViewData["Title"] = "مهارت‌های من";
    Layout = "_Layout";
    string message = ViewBag.Message as string;
}

<div class="container my-5">
    <h2 class="text-center mb-4 fw-bold text-primary">مهارت‌های من</h2>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-info text-center">
            @message
        </div>
    }

    <div class="row g-4">
        @foreach (var skill in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card skill-card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">@skill.Title</h5>
                        <a asp-action="RemoveServiceFromSkills" asp-route-id="@skill.Id"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('آیا مطمئن هستید که می‌خواهید این مهارت را حذف کنید؟');">
                            <i class="fas fa-trash-alt me-1"></i> حذف
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<style>
    .skill-card {
        border: none;
        border-radius: 10px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .skill-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        .skill-card .card-title {
            font-size: 1.1rem;
            font-weight: bold;
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
   
    h2, .alert {
        text-align: center;
    }
</style>
