@using App.Domain.Core.Enums;
@using FrameWork;
@model List<App.Domain.Core.Entities.Services.ServiceRequest>;

@{
    Layout = "_Layout";
    ViewData["Title"] = "Service Requests";
}

<h2 class="text-center mb-4">درخواست های مرتبط</h2>

@if (Model == null || Model.Count == 0)
{
    <div class="card shadow-sm mb-4">
        <div class="card-body text-center">
            <h4 class="text-muted">درخواستی موجود نیست</h4>
        </div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>عنوان درخواست</th>
                    <th>تاریخ رزرو</th>
                    <th>وضعیت</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.Title</td>
                        <td>@request.BookingDate.ToPersianString()</td>
                        <td>@request.Status.ToFarsiStatus()</td>
                        <td>
                            <a class="btn btn-success btn-sm"
                       asp-controller="ServiceRequest"
                       asp-action="Details"
                       asp-route-id="@request.Id">
                                <i class="fas fa-eye"></i> مشاهده جزییات
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    .table th, .table td {
        text-align: right;
        padding: 12px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .thead-dark {
        background-color: #343a40;
        color: white;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        font-size: 14px;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-sm {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .card-header {
        background-color: #f1f1f1;
        border-bottom: 1px solid #ddd;
        font-size: 16px;
    }

    .table td a i {
        margin-left: 5px;
    }
</style>
