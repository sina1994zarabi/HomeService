<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset = "utf-8" />
    <meta name = "viewport" content = "width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Home Service</title>
    <link rel = "stylesheet" href = "~/ClientPanel/css/site.css" />
    <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel = "stylesheet" href = "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-...your-integrity-hash..." crossorigin="anonymous">
</head>
<body>
    <!-- Header Section -->
    <header>
        <div class="container">
            <div class="logo">
                <img src="~/ClientPanel/images.png" alt="Online Home Services Logo" />
                <span>سرویس خدمات منزل آنلاین</span>
            </div>
            <div class="user-status">
            </div>
        </div>
    </header>
    <!-- Navigation Bar -->
    <nav>
        <div class="container">
            <ul>
                <li>
                    <a asp-area = "" asp-controller = "Home" asp-action = "Index">خانه</a>
                </li>
                <li>
                    <a asp-controller = "Dashboard" asp-action = "Profile">پروفایل</a>
                </li>
                <li>
                    <a asp-controller = "ServiceRequest" asp-action = "Index">درخواست های مرتبط</a>
                </li>
                <li>
                    <a asp-controller = "ServiceOffering" asp-action = "Index">پیشنهادات من</a>
                </li>
                <li>
                    <a asp-controller = "Skill" asp-action = "Index">مهارت های من</a>
                </li>
                <li>
                    <a asp-area = "Account" asp-controller = "Account" asp-action = "LogOut">خروج</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>
    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="copyright">
                © تمامی حقوق محفوظ است.
            </div>
            <div class="social-icons">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-google-plus-g"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/ClientPanel/js/site.js"></script>
</body>
</html>