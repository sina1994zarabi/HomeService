@model App.Domain.Core.DTOs.ExpertDto.UpdateExpertDto

@{
    ViewData["Title"] = "ویرایش پروفایل";
    Layout = "_Layout";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="w-100" style="max-width: 600px;">
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center mb-3">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center mb-3">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="card profile-card shadow-lg border-0 rounded-4">
            <div class="card-header text-center bg-primary text-white rounded-top py-3">
                <h3 class="mb-0">ویرایش پروفایل</h3>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <img id="profilePreview"
                         src="@( !string.IsNullOrEmpty(Model.ImagePath)
                                ? Model.ImagePath
                                : Url.Content("~/ClientPanel/images/default-profile.png") )"
                         class="rounded-circle border"
                         alt="Profile Picture"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                </div>

                <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="AppUserId" />
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">نام و نام خانوادگی</label>
                        <input asp-for="FullName" class="form-control shadow-sm" placeholder="نام و نام خانوادگی" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">ایمیل</label>
                        <input asp-for="Email" class="form-control shadow-sm" placeholder="ایمیل" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Username" class="form-label fw-bold">نام کاربری</label>
                        <input asp-for="Username" class="form-control shadow-sm" placeholder="نام کاربری" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold">شماره تماس</label>
                        <input asp-for="PhoneNumber" class="form-control shadow-sm" placeholder="شماره تماس" />
                        <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">عکس پروفایل</label>
                        <input asp-for="Image" type="file" class="form-control shadow-sm" onchange="previewImage()" />
                        <span asp-validation-for="Image" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 shadow-sm">ذخیره تغییرات</button>
                </form>
            </div>
        </div>
    </div>
</div>



