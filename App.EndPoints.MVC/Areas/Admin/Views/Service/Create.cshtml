@model App.Domain.Core.DTOs.ServiceDto.CreateServiceDto

@{
    ViewData["Title"] = "Create Service";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>ایجاد خدمات جدید</h2>

<form asp-action="Create" method="Post">
    <div class="form-group">
        <label>عنوان </label>
        <input asp-for = "Title"  class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>توضیحات </label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>قیمت </label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>دسته بندی اصلی </label>
        <select asp-for="SubCategoryId" class="form-control">
            @foreach (var cat in ViewBag.SubCategories)
            {
                <option value="@cat.Id">@cat.Title</option>
            }
        </select>
    </div>


    <button type="submit" class="btn btn-success">ایجاد</button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> بازگشت
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}