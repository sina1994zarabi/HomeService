@model List<App.Domain.Core.Entities.Services.SubCategory>

@{
    ViewData["Title"] = "All";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>All SubCategories</h2>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>
    @foreach (var subCat in Model)
    {
        <tr>
            <td>@subCat.Title</td>
            <td>@subCat.Category?.Title</td>
            <td>
                <a asp-action="Edit" asp-route-id="@subCat.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@subCat.Id">Details</a> |
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteSubcategoryModal-@subCat.Id">پاک کردن</button>


                <div class="modal fade" id="deleteSubcategoryModal-@subCat.Id" tabindex="-1" role="dialog" aria-labelledby="deleteSubcategoryModalLabel-@subCat.Id" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteSubcategoryModalLabel-@subCat.Id">پاک کردن رکورد</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                مطمین اید می خواهید ادامه دهید؟
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">لغو</button>
                                <a href="@Url.Action("DeleteConfirmed", new { id = subCat.Id })" class="btn btn-danger">پاک کردن</a>
                            </div>
                        </div>
                    </div>
                </div>

            </td>
        </tr>
    }
</table>
<a asp-action="Create" class="btn btn-primary">Create New</a>