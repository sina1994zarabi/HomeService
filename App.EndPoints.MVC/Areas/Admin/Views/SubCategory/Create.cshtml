@model App.Domain.Core.DTOs.SubCategoryDto.CreateSubCategoryDto

@{
    ViewData["Title"] = "SubCategory Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2> ایجاد دسته بندی فرعی جدید </h2>

<form asp-action = "Create" method = "post" enctype="multipart/form-data">
    <div class = "form-group">
        <label>عنوان </label>
        <input asp-for = "Title" class = "form-control" />
    </div>

    <div class="form-group relative">
        <input asp-for = "Image" type = "file" class="form-control">
        <label>آپلود عکس</label>
        <div class="input-group round">
            <input type="text" class="form-control file-input" placeholder = "برای آپلود کلیک کنید">
            <span class="input-group-btn">
                <button type="button" class="btn btn-success">
                    <i class="icon-picture"></i>
                    آپلود عکس
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </button>
            </span>
        </div>
        <div class="help-block"></div>
    </div>

    <div class="form-group">
        <label>دسته بندی اصلی </label>
        <select asp-for = "CategoryId" class="form-control">
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            }
        </select>
    </div>

    <button type = "submit" class = "btn btn-success">ایجاد</button>
    <a asp-action = "Index" class = "btn btn-secondary">
        <i class="fas fa-arrow-left"></i> بازگشت
    </a>
</form>