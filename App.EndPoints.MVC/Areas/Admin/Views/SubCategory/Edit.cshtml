@model App.Domain.Core.DTOs.SubCategoryDto.GetSubCategoryDto

@{
    ViewData["Title"] = "SubCategory Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>ویرایش جزییات </h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>عنوان</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group relative">
        <input asp-for="Image" type="file" class="form-control">
        <label>آپلود عکس</label>
        <div class="input-group round">
            <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
            <span class="input-group-btn">
                <button type="button" class="btn btn-success">
                    <i class="icon-picture"></i>
                    آپلود عکس
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </button>
            </span>
        </div><!-- /.input-group -->
        <div class="help-block"></div>
    </div>

    <div class="form-group">
        <label>دسته بندی مادر </label>
        <select asp-for="CategoryId" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Title</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-warning">اعمال تغیرات</button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> بازگشت
    </a>
</form>