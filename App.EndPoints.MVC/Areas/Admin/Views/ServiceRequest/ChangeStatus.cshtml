@using App.Domain.Core.Enums;
@model App.Domain.Core.DTOs.ServiceRequestDto.ChangeStatusDto
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Change Status";
}
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action = "ChangeStatus" method="post">
                <div class="row mb-3">
                    <input hidden asp-for="@Model.ServiceRequestId" value="@Model.ServiceRequestId" />
                    <label class="col-sm-2 col-form-label" asp-for="@Model.Status">نام</label>
                    <div class="col-sm-10">
                        <select asp-for="@Model.Status" class="select2 form-select form-select-lg" data-allow-clear="true">

                            <option value="@StatusEnum.PendingClientConfirmation">در انتظار تایید متشری</option>
                            <option value="@StatusEnum.PendingProviderConfirmation">در انتظار تایید متخصص</option>
                            <option value="@StatusEnum.Completed"> انجام شد</option>
                            <option value="@StatusEnum.Cancelled">لغو شد</option>

                        </select>
                    </div>
                </div>
                <div class="row justify-content-end">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">ارسال</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">
    <i class="fas fa-arrow-left"></i> بازگشت
</a>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
