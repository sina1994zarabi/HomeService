@model App.Domain.Core.DTOs.CategoryDto.GetCategoryDto;

@{
    ViewData["Title"] = "Edit Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action = "Edit" method = "Post">
    <input type = "hidden" asp-for = "Id" />

    <div class = "form-group">
        <label>عنوان</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label>آپلود عکس</label>
        <input asp-for="ImagePath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">اعمال تغییرات</button>
</form>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
}