@model List<App.Domain.Core.Entities.User.Client>

@{
    ViewData["Title"] = "Client Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>مشتریان</h2>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>نام و نام خانوادگی</th>
            <th>شماره تماس</th>
            <th>جنسیت</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.FullName</td>
                <td>@client.PhoneNumber</td>
                <td>@client.Gender</td>
                <td>
                    <a href = "@Url.Action("ClientDetails", "User", new { area = "Admin", id = client.Id })" class="btn btn-info">مشاهده جزییات</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteClientModal-@client.Id">حذف</button>

                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteClientModal-@client.Id" tabindex="-1" role="dialog" aria-labelledby="deleteClientModalLabel-@client.Id" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteClientModalLabel-@client.Id">پاک کردن رکورد</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    مطمین اید می خواهید ادامه دهید؟
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">لغو</button>
                                    <a asp-action = "DeleteClient" asp-route-id = "@client.Id" class="btn btn-danger">پاک کردن</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="CreateClient" class="btn btn-primary">ایجاد مشتری جدید</a>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>