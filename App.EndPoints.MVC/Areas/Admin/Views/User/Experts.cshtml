@model List<App.Domain.Core.Entities.User.Expert>

@{
    ViewData["Title"] = "Expert Management";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Expert Management</h2>

<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>نام و نام خانوادگی</th>
            <th>شماره تماس</th>
            <th>جنسیت</th>
            <th>وضعیت</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expert in Model)
        {
            <tr>
                <td>@expert.FullName</td>
                <td>@expert.PhoneNumber</td>
                <td>@expert.Gender</td>
                <td>@(expert.IsApproved ? "تایید شده" : "در انتظار تایید")</td>
                <td>
                    @if (!expert.IsApproved)
                    {
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#approveExpertModal-@expert.Id">تایید</button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#rejectExpertModal-@expert.Id">رد</button>
                    }
                    <a href="@Url.Action("ExpertDetails", "User", new { area = "Admin", id = expert.Id })" class="btn btn-info">مشاهده جزییات</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteExpertModal-@expert.Id">حذف</button>
                    <!-- Delete Confirmation Modal -->
                    <div class="modal fade" id="deleteExpertModal-@expert.Id" tabindex="-1" role="dialog" aria-labelledby="deleteExpertModalLabel-@expert.Id" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteExpertModalLabel-@expert.Id">Delete Expert</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure you want to delete this expert?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <a asp-action="DeleteExpert" asp-route-id="@expert.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
