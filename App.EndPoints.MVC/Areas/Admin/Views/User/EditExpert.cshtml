@model App.Domain.Core.DTOs.ExpertDto.UpdateExpertDto

@{
    ViewData["Title"] = "Edit Expert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>ویرایش کارشناس</h2>

<form asp-action="EditExpert" method="post">
    <div class="form-group">
        <input type="hidden" id="AppUserId" asp-for="AppUserId">
    </div>
    <div class="form-group">
        <label asp-for="FullName" class="control-label">نام کامل</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username" class="control-label">نام کاربری</label>
        <input asp-for="Username" class="form-control"></input>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">ایمیل</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">شماره تلفن</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group relative">
        <input asp-for= "ImagePath" type="file" class="form-control">
        <label>آپلود عکس</label>
        <div class="input-group round">
            <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
            <span class="input-group-btn">
                <button type="button" class="btn btn-success">
                    <i class="icon-picture"></i>
                    آپلود عکس
                    <div class="paper-ripple">
                        <div class="paper-ripple__background"></div>
                        <div class="paper-ripple__waves"></div>
                    </div>
                </button>
            </span>
        </div><!-- /.input-group -->
        <div class="help-block"></div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">اعمال تغییرات</button>
    </div>
</form>

<div>
    <a asp-action="Expert" class="btn btn-secondary">بازگشت</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}