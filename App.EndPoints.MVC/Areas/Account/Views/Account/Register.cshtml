@model App.EndPoints.MVC.Models.RegisterViewModel
@using App.Domain.Core.Enums;

<section class="gray">
    <div class="container">
        <div class="row align-items-start justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-12">
                <div class="signup-screen-wrap">
                    <div class="signup-screen-single light">
                        <div class="text-center mb-4">
                            <h4 class="m-0 ft-medium">ثبت نـام</h4>
                        </div>
                        <form class="submit-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger p-3" role="alert"></div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="FullName" class="mb-1"> نام و نام خانوادگی: </label>
                                        <input type="text" asp-for = "FullName" class="form-control rounded">
                                        <span asp-validation-for = "FullName" class="text-danger"></span>
                                    </div>
                                </div>
                              
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="mb-1">ایمیل</label>
                                <input type="email" asp-for="Email" class="form-control rounded">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Password" class="mb-1">رمز عبور</label>
                                        <input type="password" asp-for="Password" class="form-control rounded">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="ConfirmedPassword" class="mb-1">تکرار رمز عبور</label>
                                        <input type="password" asp-for="ConfirmedPassword" class="form-control rounded">
                                        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label asp-for="Gender" class="mb-1">جنسیت</label>
                                        <select class="form-control rounded" asp-for="Gender">
                                            <option value="@Gender.female">خانوم</option>
                                            <option value="@Gender.male">آقا</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="mb-1">ثبت نام به عنوان: </label><br>
                                <input type="radio" id="client" name="Role" asp-for="Role" value="Client" checked> 
                                <label for="client" class="ft-medium">مشتری</label><br>
                                <input type="radio" id="expert" name="Role" asp-for="Role" value="Expert"> 
                                <label for="expert" class="ft-medium">کارشناس</label><br>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-md full-width theme-bg text-light rounded ft-medium">ثبت نام</button>
                            </div>

                            <div class="form-group text-center mt-4 mb-0">
                                <p class="mb-0">آیا قبلا ثبت نام کرده اید؟ <a asp-action = "Login" class="ft-medium text-success">ورود به حساب کاربری</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.gray {
    background-color: #f9f9f9;
    padding: 40px 0;
}

.signup-screen-wrap {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.signup-screen-single {
    padding: 20px;
}

.text-center {
    text-align: center;
}

.mb-4 {
    margin-bottom: 1.5rem;
}

.ft-medium {
    font-weight: 500;
}

.form-group {
    margin-bottom: 15px;
}

label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
}

input[type="text"],
input[type="password"],
input[type="email"],
select {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    box-sizing: border-box;
}

input[type="text"]:focus,
input[type="password"]:focus,
input[type="email"]:focus,
select:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

.btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: 500;
    line-height: 1.5;
    text-align: center;
    text-decoration: none;
    white-space: nowrap;
    vertical-align: middle;
    cursor: pointer;
    border: 1px solid transparent;
    border-radius: 5px;
    user-select: none;
    transition: background-color 0.3s, border-color 0.3s;
}

.btn-md {
    padding: 10px 16px;
    font-size: 16px;
}

.full-width {
    width: 100%;
}

.theme-bg {
    background-color: #007bff;
    color: #ffffff;
}

.text-light {
    color: #ffffff;
}

.btn:hover {
    background-color: #0056b3;
    color: #ffffff;
}

.text-success {
    color: #28a745;
}

.text-success:hover {
    color: #218838;
}

.text-danger {
    color: #dc3545;
}
</style>