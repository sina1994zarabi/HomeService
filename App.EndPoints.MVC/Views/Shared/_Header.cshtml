@using App.Domain.Core.Entities.User;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> SignInManager;
@inject UserManager<AppUser> UserManager;

<header class="header_section">
	<div class="header_top">
		<div class="container-fluid">
			<div class="contact_nav">
				<a href="">
					<i class="fa fa-phone" aria-hidden="true"></i>
					<span>
						تماس : +98 621113245
					</span>
				</a>
				<a href="">
					<i class="fa fa-envelope" aria-hidden="true"></i>
					<span>
						Email : HomeServiceDemo@gmail.com
					</span>
				</a>
			</div>
		</div>
	</div>
	<div class="header_bottom">
		<div class="container-fluid">
			<nav class="navbar navbar-expand-lg custom_nav-container ">
				<a class="navbar-brand" href="index.html">
					<span>
						خدمات منزل
					</span>
				</a>

				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class=""> </span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ">
						<li class="nav-item active">
							<a class="nav-link" href="index.html">خانه <span class="sr-only">(current)</span></a>
						</li>
						<li class="nav-item">
							<a class = "nav-link" href = "about.html"> دسته بندی ها</a>
						</li>
						<li class="nav-item">
							<a class = "nav-link" href = "service.html">خدمات</a>
						</li>
						@if (SignInManager.IsSignedIn(User))
						{
							<li class="nav-item">
								@if (User.IsInRole("Expert"))
								{
									<a class="nav-item" asp-area = "Expert" asp-controller = "Dashboard" asp-action = "Index" title="پروفایل">@User.Identity?.Name</a>
								}
								else if (User.IsInRole("Customer"))
								{
									<a class="nav-item" asp-area = "Client" asp-controller = "Dashboard" asp-action = "Index" title="پروفایل">@User.Identity?.Name</a>
								}
							</li>
							<li>
								<a class="nav-item" asp-area="Account" asp-controller = "Account" asp-action = "LogOut">
									<i class="bx bx-power-off me-2">خروج</i>
								</a>
							</li>
						}
						else {
							<li class = "nav-item">
								<div class = "nav-bar-left">
									<a asp-area="Account" asp-controller="Account" asp-action="Login"
										class="btn">ورود
									</a>
									<a class="btn" asp-area = "Account" asp-controller = "Account" asp-action = "Register">ثبت نام</a>
								</div>
							</li>
						}
					</ul>
				</div>
			</nav>
		</div>
	</div>
</header>

<style>
	/* Button container on the left */
	.nav-bar-left {
		display: flex;
		gap: 10px; /* Space between buttons */
	}

	/* General button styling */
	.btn {
		background-color: #ADD8E6; /* Light blue */
		color: #FFFFFF;
		padding: 10px 20px;
		border: 2px solid #FFFFFF;
		border-radius: 25px;
		font-family: 'Roboto', sans-serif;
		font-size: 16px;
		text-align: center;
		cursor: pointer;
		transition: background-color 0.3s;
	}

		.btn:hover {
			background-color: #87CEEB; /* Slightly darker blue for hover */
		}
</style>
