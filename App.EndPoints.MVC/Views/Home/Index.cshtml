@model List<App.Domain.Core.Entities.Services.Service>

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
<section class="feature_section">
    <div class="container">
        <div class="feature_container">
            @foreach (var category in ViewBag.Categories) 
            {
                <div class = "box">
                    <div class = "img-box">
                        @if (!string.IsNullOrEmpty(category.Image))
                        {
                            <img src="@category.Image" alt="@category.Title" height = "50" width = "50"/>
                        }
                        else
                        {
                            <svg><!-- Add a placeholder SVG here --></svg>
                        }
                    </div>
                    <h5 class = "name">
                        @category.Title
                    </h5>
                </div>
            }
            <div class = "box">
                <div class = "img-box">
                    <a href="">
                        بیشتر   
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</section>

<section class="service_section layout_padding">
    <div class="container ">
        <div class="heading_container heading_center">
            <h2> خدمات </h2>
        </div>
        <div class="row">
           @foreach (var service in Model){
                <div class="col-sm-6 col-md-4 mx-auto">
                    <div class = "box" >
                        <div class = "img-box">
                            <img src = "@service.Image" alt = "Service Picture" />
                        </div>
                        <div class="detail-box">
                            <h5>
                                @service.Title
                            </h5>
                            <p>
                                @service.Description
                            </p>
                        </div>
                    </div>
                </div>
           }
        </div>
        <div class="btn-box">
            <a href="">
                بیشتر
            </a>
        </div>
    </div>
</section>






