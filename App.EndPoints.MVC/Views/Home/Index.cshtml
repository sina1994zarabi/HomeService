@model List<App.Domain.Core.Entities.Services.Category>


@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="hero-section py-5 mb-4" style="background: linear-gradient(rgba(40,167,69,0.8), rgba(33,136,56,0.6));
                                               background-size: cover;
                                               background-position: center;
                                               clip-path: polygon(0 0, 100% 0, 100% 90%, 50% 100%, 0 90%);">
    <div class="container text-center text-white py-5">
        <h1 class="display-4 mb-4">راحت انجام می شه</h1>
        <p class="lead mb-4">جستجوی خدمات مورد نظر</p>
        <div class="search-container mx-auto" style="max-width: 600px;">
            <div class="input-group">
                <input type="text" class="form-control form-control-lg" placeholder="دنبال چه می گردید؟">
                <button class="btn btn-lg btn-light" type="button">جستجو</button>
            </div>
        </div>
    </div>
</div>

<section class="space min gray">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
                <div class="sec_title position-relative text-center mb-5">
                    <h6 class="theme-cl">دسته بندی‌ها</h6>
                </div>
            </div>
        </div>
        <!-- row -->

        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6">
                    <div class="cats-wrap text-center">
                        <a asp-action="SubCategories" asp-route-id="@item.Id" class="Goodup-catg-wrap">
                            <div class="Goodup-catg-icon"><img style="width:50%" src="@item.Image" /></div>
                            <div class="Goodup-catg-caption">
                                <h4 class="fs-md mb-0 ft-medium m-catrio">@item.Title</h4>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Call-to-Action Section -->
<section>
<div class="bg-light py-5">
    <div class="container text-center">
        <h2>آیا تا به حال عضو نشده اید؟?</h2>
        <a href="/Account/Register" class="btn btn-primary btn-lg mt-3">همین حالا ثبت کنید</a>
    </div>
</div>
</section>



