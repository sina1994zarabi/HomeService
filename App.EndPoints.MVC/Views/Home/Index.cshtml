@using App.Domain.Core.Entities.User;
@using Microsoft.AspNetCore.Identity;
@model List<App.Domain.Core.Entities.Services.Category>
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="feature-cat-area pt-100" id="category">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="menu-content pb-60 col-lg-10">
				<div class="title text-center">
					<h1 class="mb-10">دسته بندی ها</h1>
					<p>از میان دسته بندی های زیر خدمات مورد نیاز خود را پبیدا کنید</p>
				</div>
			</div>
		</div>
		<div class = "row">
			@foreach (var cat in Model) 
			{
				<div class = "col-lg-2 col-md-4 col-sm-6">
					<div class="single-fcat">
						<a href = "">
							<img src="@cat.Image" alt="" height = "50" width = "50">
						</a>
						<p>@cat.Title</p>
					</div>
				</div>
			}
		</div>
	</div>
</section>
<section class = "feature-cat-area pt-100" id = "service">
    <div class = "container">
        <div class = "container mt-5">
            <div class = "row">
                @foreach (var service in ViewBag.Services)
                    {
                        <div class = "col-md-4 mb-4">
                            <div class = "card h-100">
                            @if (!string.IsNullOrEmpty(service.Image))
                            {
                                <img src="@service.Image" class="card-img-top" alt="@service.Title" />
                            }
                            else
                            {
                                <img src="" class="card-img-top" alt="" />
                            }

                            <div class = "card-body">
                                <h5 class = "card-title">@service.Title</h5>
                                <p class = "card-text">@service.Description</p>
                            </div>
                            <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">قیمت: @service.Price.ToString("C")</span>
                                <a href="@Url.Action("Details", "Services", new { id = service.Id })" class="btn btn-sm btn-primary">جزییات</a>
                            </div>
                            </div>
                        </div>
                </div>
                }
                <div class="col-12 text-center">
                    <a asp-controller = "" asp-action = "" class="btn btn-primary mt-3">
                    مشاهده همه      
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>







