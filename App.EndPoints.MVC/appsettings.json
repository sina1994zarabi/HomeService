{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=HomeServiceDB;Trusted_Connection=True;TrustServerCertificate=true",
    "LogsConnection": "Server=localhost\\SQLEXPRESS;Database=HomeServiceLogDB;Trusted_Connection=True;TrustServerCertificate=true"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "FileUploadSettings": {
    "AllowedExtensions": ".png,.jpg,.jpeg,.gif",
    "MaxFileSizeMB": 5,
    "UploadFolder": "uploads/images"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
